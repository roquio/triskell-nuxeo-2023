<?xml version="1.0"?>
<component name="io.roqu.triskell.businessid.directory" version="1.0">

    <extension target="org.nuxeo.ecm.directory.sql.SQLDirectoryFactory"
               point="directories">
        <directory name="businessidentifiers">
            <schema>businessidentifier</schema>
            <dataSource>java:/nxsqldirectory</dataSource>
            <table>businessidentifier</table>
            <idField>id</idField>
            <autoincrementIdField>false</autoincrementIdField>
            <createTablePolicy>on_missing_columns</createTablePolicy>
            <dataLoadingPolicy>never_load</dataLoadingPolicy>
        </directory>
    </extension>

    <extension target="org.nuxeo.ecm.core.schema.TypeService" point="schema">
        <schema name="businessidentifier"  src="schema/businessidentifier.xsd"/>
    </extension>
</component>
